   </div>
    <form class="c-form" id="js-comment">
      <div class="c-form__field">
        <label class="c-form__label" for="js-name">Meno</label>
        <input class="c-form__name" type="text" name="userName">
      </div>

      <div class="c-form__field">
        <label class="c-form__label" for="js-commment">Komentar</label>
        <textarea class="c-form__text" name="userComment"></textarea>
      </div>

      <!-- <input type="submit" value="Poslat komentar"> -->

    </form>
    <div class="c-article__btn" id="js-btn" data-url="{{item._id}}">Pridat</div>
