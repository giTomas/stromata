    <h3 class="c-article__author">{{item.author.firstName}} {{item.author.lastName}}</h3>
  </a>
  <a class="c-section__link" href="/{{item.category}}"><h3 class="c-section__title">{{item.category}}</h3></a>
  {{#each item.body }}
      <h3 class="c-article__subtitle">{{ h }}</h3>
      <p class="c-article__text">{{ p }}</p>
  {{/each}}
